{
  "name": "ck3-mod-updater",
  "version": "1.0.0",
  "description": "Crusader Kings 3 Mod Updater",
  "main": "index.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "dev": "webpack serve --config-name=renderer --mode=development",
    "webpack": "webpack --progress --mode=production",
    "build": "rimraf build && npm run webpack",
    "electron": "electron ./build/main.js",
    "start": "npm run build && npm run electron"
