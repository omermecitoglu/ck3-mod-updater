    "bootstrap": "^5.2.0",
    "dotenv": "^16.0.1",
    "electron-settings": "^4.0.2",
    "firebase": "^9.9.2",
    "nodegit": "^0.28.0-alpha.18",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.6.3",
    "@types/nodegit": "^0.27.10",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
